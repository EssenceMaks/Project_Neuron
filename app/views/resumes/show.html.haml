.suit_header
  .col-sm-2
    .block_suit_foto
      = link_to(image_tag(@resume.imgresume.url , :title => "Back to Welcome Page", :class => "suit_foto"), root_path)
  .col-sm-4
    #user_suit_name
      %h3= @soul.name + " " + @soul.surname
      %h4= @soul.nickname
      %h4 Age: #{@age.year - @soul.born.year}
      %h4 City: #{@soul.city}

  .col-sm-2
    #user_mobile_number
      %h2= @soul.mob_number
      %p= @resume.workmail
      /%p mail-me function
  .col-sm-4
    #user_sosial_networks
      .sosial_logo_suit_show_page_transform
        = link_to image_tag( 'in.png', :class => 'sosial_logo_suit_show_page' ), @soul.linkid, target: '_blank'
      .sosial_logo_suit_show_page_transform
        = link_to image_tag( 'github.png', :class => 'sosial_logo_suit_show_page' ), @soul.github, target: '_blank'
      .sosial_logo_suit_show_page_transform
        = link_to image_tag( 'fb.png', :class => 'sosial_logo_suit_show_page' ), @soul.facebook, target: '_blank'
      .sosial_logo_suit_show_page_transform
        = link_to image_tag( 'skype.png', :class => 'sosial_logo_suit_show_page' ), "#", target: '_blank', title: @soul.skype, data: { confirm: "Skype name is:   #{@soul.skype} " }#, class: 'sosial_logo_suit_show_page_tr'
      /%h4= @soul.facebook
      /= link_to image_tag( 'fb.png'), @soul.facebook
      /%h4= @soul.skype
      /<a href=@soul.Facebook, target="_blank" class=" div1"><%= image_tag("fb.png", :title => "My Facebook", :class => "ava1")%><span class="name"></span></a></li>

.suit_text
  .col-sm-1
  .col-sm-10
    
    #Technologies_I_work_with:
      %h3 Technologies I work with:
      %ul
        - @resume.my_skills.each do |skill|
          %li= skill.skill 

    #Interested_in:
      %h3 Interested in:
      %ul
        - @resume.interested_ins.each do |interested_in|
          %li= interested_in.futureskill

    #Education:
      %h3 Education:
      %ul
        - @resume.educations.each do |education|
          %li= education.college

    #Additional_education:
      %h3 Additional education:
      %ul
        - @resume.additional_educations.each do |additional_education|
          %li= additional_education.academy 
  %h1 this is the face of user, like a person status
  %h2= @resume.suitname
  %br
  %h2= @resume.suitname
  %br
  %h3= link_to @soul.name, soul_path(@soul)
  %br
  = link_to "new", new_soul_resume_path, class: "btn btn-default btn_bottom_back"
  = link_to "delete", soul_resume_path(@soul, @resume), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default btn_bottom_back"

  .body_resume_show
    .col-xs-1.col-md-1

    .col-xs-10.col-md-10
      - @resumes.each do |res|
        .user_plate
          .col-xs-3.col-md-3
            .suit
              .suits_fotos
                %h2= link_to res.suitname, soul_resume_path(@soul, res)
                %h2= truncate(res.suitdescription, length: 5)
          .col-xs-3.col-md-3
          .col-xs-3.col-md-3
          .col-xs-3.col-md-3


    .col-xs-1.col-md-1

  - if @soul.user == current_user
    = link_to "edit", edit_soul_resume_path, class: "btn btn-default btn_bottom_back"