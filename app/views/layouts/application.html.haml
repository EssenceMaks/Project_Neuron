!!! 5
%html
%head
  %title Suits App
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body.body
  .suit_body
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert"
    = yield
 
  .mainnavigation
    .col-xs-3.col-sm-3
      - if user_signed_in?
        .navbar-brand= link_to "Home", home_path#souls_path(current_user)
        %h6= current_user.soul.name
      - else
        .navbar-brand= link_to "Sign in", new_user_session_path
    .col-xs-3.col-sm-3
      .navbar-brand= link_to "Suits", root_path
    .col-xs-3.col-sm-3
      .navbar-brand= link_to "New Suit"#, new_suit_path
    .col-xs-3.col-sm-3
      - if user_signed_in?
        .navbar-brand= link_to "Sign Out", destroy_user_session_path, :method => :delete
      - else
        .navbar-brand= link_to "Sign Up", new_user_registration_path
